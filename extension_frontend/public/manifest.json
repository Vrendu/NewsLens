{
    "manifest_version": 3,
    "version": "1.0.0",
    "name": "newslens",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://*.cnn.com/*",
        "https://*.fox.com/*",
        "https://*.msnbc.com/*",
        "https://*.washingtonpost.com/*",
        "https://*.nytimes.com/*",
        "http://localhost:8000/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.cnn.com/*",
                "https://*.fox.com/*",
                "https://*.msnbc.com/*",
                "https://*.washingtonpost.com/*",
                "https://*.nytimes.com/*"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ]
}